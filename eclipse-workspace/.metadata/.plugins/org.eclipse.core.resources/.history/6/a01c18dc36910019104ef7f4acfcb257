package com.revature.fbmechanism;

import java.util.ArrayList;

public class FizzBuzz {
	int numOne;
	int numTwo;
	int fizz;
	int buzz;
	int current;
	String statement = "";
	public FizzBuzz(int numOne, int numTwo,int fizz, int buzz ) {
		this.numOne  = numOne;
		this.numTwo = numTwo;
		this.fizz = fizz;
		this.buzz = buzz;
	}
	public void fizzBuzzBasic(){
		for(int i = numOne; i < numTwo; i++) {
			if(i%fizz == 0 & i%buzz == 0) {
				System.out.println("fizzbuzz");
			}
			else if(i%fizz == 0) {
				System.out.println("fizz");
			}
			else if(i%buzz == 0) {
				System.out.println("buzz");
			}
			else{
				System.out.println(i);
			}
		}
	}
	public void fizzBuzzAdvanced(int numberOne, int numberTwo, ArrayList<Integer> numbers, ArrayList<String> effects) {
		for(int i = numberOne + 1; i < numberTwo; i++) {
			int j = 0;
			while(j < numbers.size()) {
				if(numbers.get(j)% i == 0) {
					statement = statement + effects.get(j);
				}
			}
			if(statement.isEmpty()) {
				System.out.println(i);
			}else {
				System.out.println(statement);
				statement = "";
			}
			j = 0;
		}
		
	}
}
